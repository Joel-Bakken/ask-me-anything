{{#if addNewQuestion}}
  <h1>I've got a question!</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="asker">Asker</label>
        {{input value=asker id="asker"}}
      </div>

      <div class="form-group">
        <label for="subject">What Subject?</label>
        {{input value=subject id="subject"}}
      </div>

      <div class="form-group">
        <label for="inquiry">My question:</label>
        {{textarea value=inquiry id="inquiry"}}
      </div>
      <button {{action 'saveQuestion1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>I've got a question</button>
{{/if}}
